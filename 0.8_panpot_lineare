// signal
import("stdfaust.lib");
decimale(step)= step-int(step);
frequenza = 200;
fasore = (frequenza/ma.SR) : (+ : decimale) ~ _;
saw = (fasore-0.5)*2;

// panpot
panner_control = hslider("pan",0,0,1, 0.01);
panner_1 = panner_control *-1 +1;
panner_2 = panner_control;
process = saw*panner_1, saw*panner_2;
